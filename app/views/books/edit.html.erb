<h2>Editing Book</h2>
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :opinion %>
    <%= f.submit 'Update Book ' %>
  <% end %>
  
  <%= link_to 'Show', book_path(@book.id), class: "show_#{@book.id}" %>
  |
  <%= link_to 'Back', books_path, class: "back" %>